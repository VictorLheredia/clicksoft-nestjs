generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
  id        String @id @default(uuid())
  register  Int    @unique
  name      String
  email     String
  birthdate String
  rooms     Room[]

  @@map("students")
}

model Teacher {
  id        String @id @default(uuid())
  register  Int    @unique
  name      String
  email     String
  birthdate String
  rooms     Room[]

  @@map("teachers")
}

model Room {
  id              String    @id @default(uuid())
  number          Int       @unique
  capacity        Int
  available       Boolean
  teacherRegister Int
  Teacher         Teacher   @relation(fields: [teacherRegister], references: [register])
  students        Student[]

  @@map("rooms")
}
